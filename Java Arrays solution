  Question 5:
  
  
  public class Main
{
	public static void main(String[] args) {
	int[] array ={1, 1, 3, 4, 2, 3, 5, 7, 0};
	for(int i=1;i<array.length-1;i++){
	    if(array[i]>array[i-1] && array[i]>array[i+1]){
	        System.out.println(array[i]);
	        break;
	    }
	    }
	    
	}
	}
